let showBtn = document.getElementById("show");
  let content = document.getElementById("people_online");
  let onlineOpen = false;
  showBtn.addEventListener("click", () => {
    if (!onlineOpen) {
      content.classList.add("active");
      onlineOpen = true;
    } else {
      content.classList.remove("active");
      onlineOpen = false;
    }
  })

